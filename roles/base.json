{
  "name": "base",
  "run_list": [
    "recipe[chef-solo-search]",
    "recipe[hostname]",
    "recipe[apt]",
    "recipe[unattended-upgrades]",
    "recipe[ntp]",
    "recipe[sudo]",
    "recipe[user::data_bag]",
    "recipe[postfix]",
    "recipe[openssh]",
    "recipe[logrotate]",
    "recipe[fail2ban]",
    "recipe[ufw]",
    "recipe[shm_noexec]",
    "recipe[sysctl]",
    "recipe[zsh]",
    "recipe[platform_packages]",
    "recipe[secrets]",
    "recipe[newrelic]"
  ],
  "default_attributes": {
    "secrets": ["newrelic"],
    "users": [
      "aeschright",
      "christie",
      "kirsten",
      "reidab"
    ],
    "platform_packages": {
      "pkgs": [
        { "name": "git-core" },
        { "name": "subversion" },
        { "name": "vim" },
        { "name": "rsync" },
        { "name": "htop" },
        { "name": "ntop" },
        { "name": "iotop" },
        { "name": "elinks" },
        { "name": "unzip" },
        { "name": "mosh" },
        { "name": "screen" },
        { "name": "tmux" },
        { "name": "tree" }
      ]
    },
    "set_fqdn_reload_method": "reload",
    "unattended-upgrades": {
      "send_email": true,
      "email_address": "root@stumptownsyndicate.org"
    },
    "openssh": {
      "permit_root_login": "no",
      "password_authentication": "no"
    },
    "authorization": {
      "sudo": {
        "groups": [
          "admin"
        ],
        "passwordless": true,
        "agent_forwarding": true,
        "include_sudoers_d": true
      }
    },
    "sysctl": {
      "params": {
        "net": {
          "ipv4": {
            "icmp_echo_ignore_broadcasts": 1,
            "icmp_ignore_bogus_error_responses": 1,
            "tcp_syncookies": 1,
            "tcp_max_syn_backlog": 2048,
            "tcp_synack_retries": 2,
            "tcp_syn_retries": 5,
            "conf": {
              "all": {
                "rp_filter": 1,
                "accept_source_route": 0,
                "send_redirects": 0,
                "accept_redirects": 0,
                "log_martians": 1
              },
              "default": {
                "rp_filter": 1,
                "accept_source_route": 0,
                "send_redirects": 0,
                "accept_redirects": 0,
                "log_martians": 1
              }
            }
          },
          "ipv6": {
            "conf": {
              "all": {
                "accept_source_route": 0,
                "accept_redirects": 0
              },
              "default": {
                "accept_source_route": 0,
                "accept_redirects": 0
              }
            }
          }
        }
      }
    }
  },
  "chef_type": "role",
  "json_class": "Chef::Role"
}
